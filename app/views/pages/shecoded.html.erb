      </a>
      <div class="posts">
        <% @top_articles.each do |article| %>
          <a href="<%= article.path %>" class="single-post">
            <img src="<%= ProfileImage.new(article.user).get(150) %>" alt="<%= article.user.name %> profile image">
            <h3>
              <%= article.title %>
            </h3>
            <h4>
              <%= article.user.name %>
            </h4>
            <h5>
              #<%= (article.cached_tag_list_array & %w[shecoded theycoded shecodedally]).first %>
            </h5>
          </a>
        <% end %>
        <% @articles.each do |article| %>
          <a href="<%= article.path %>" class="single-post">
            <img src="<%= ProfileImage.new(article.user).get(150) %>" alt="<%= article.user.name %> profile image">
            <h3>
              <%= article.title %>
            </h3>
            <h4>
              <%= article.user.name %>
            </h4>
            <h5>
              #<%= (article.cached_tag_list_array & %w[shecoded theycoded shecodedally]).first %>
            </h5>
          </a>
        <% end %>
      </div>
      <%= render "layouts/footer" %>
