<div class="mb-6">
  <ul class="nav nav-pills">
    <li class="nav-item">
      <%= link_to "Registered Users", admin_users_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "New", new_admin_invitation_path, class: "nav-link" %>
    </li>
  </ul>
</div>

<table class="crayons-table" width="100%">
  <thead>
    <tr>
      <th scope="col">User</th>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody class="crayons-card">
    <% @invitations.each do |user| %>
    <tr>
      <td><%= link_to user.username, admin_user_path(user) %></td>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @invitations, theme: "internal" %>
