<% title "New Post" %>

<% if user_signed_in? %>
  <% if params[:state] == "v2" || (Rails.env.development? && params[:state] != "v1") %>
    <%= javascript_pack_tag 'articleForm', defer: true %>
    <%= render 'articles/v2_form' %>
  <% else %>
    <%= render 'articles/markdown_form' %>
  <% end %>
<% else %>
  <%= render "devise/registrations/registration_form" %>
<% end %>
