<% campaign = CampaignDecorator.new(Campaign.current) %>
<section class="crayons-card crayons-card--secondary">
  <%= campaign.sidebar_image(class: "block w-100 h-auto radius-default", width: 1000, height: 420) %>
  <header class="crayons-card__header">
    <h3 class="crayons-card__header__headline"><%= link_to "Stories (#{@campaign_articles_count})", "/t/#{campaign.main_tag}" %></h3>
  </header>
  <div>
    <% @latest_campaign_articles.each do |plucked_article| %>
      <%= render "articles/widget_list_item", plucked_article: plucked_article, show_comment_count: false %>
    <% end %>
  </div>
  <div class="grid gap-2 p-4">
    <%= link_to "Share your project", "/new/#{campaign.main_tag}", class: "crayons-btn" %>
    <%= link_to "See all posts", "/t/#{campaign.main_tag}", class: "crayons-btn crayons-btn--secondary" %>
  </div>
</section>
