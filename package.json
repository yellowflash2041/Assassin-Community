    "postcss-smart-import": "^0.7.6",
    "postscribe": "^2.0.8",
    "preact": "^10.5.12",
    "preact-textarea-autosize": "^4.0.7",
    "prop-types": "^15.7.2",
    "pusher-js": "^7.0.3",
    "rails-erb-loader": "^5.5.2",
    "stimulus": "^2.0.0",
    "twilio-video": "^2.11.0",
    "web-share-wrapper": "^0.2.1"
  },
  "resolutions": {
    "gitdocs/markdown-to-jsx": "^6.11.4"
  },
  "jest": {
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  }
}
